{{!
    @templateblock_timetable/main

    The purpose of this template is to render the timetable block.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
    }
}}

<div id="timetable-events{{uniqid}}" class="timetable {{blockview}}" data-template="block_timetable/timetable">
    <div class="col-sm d-flex justify-content-end" id="yui_{{uniqid}}">
  </div>
    <ul class="events">
        {{#events}}        
        <li id="{{id}}_{{timestart}}" class="item calendar_event_{{normalisedeventtype}} {{eventpast}}">
    <div
        class="event clearfix"
        data-eventtype-{{calendareventtype}}="1"
        data-region="event-item"
    >
        <div class="notificationtext">
            {{#coursename}}<span class="coursename">{{coursename}}</span><br/>{{/coursename}}
            <a
                data-type="event"
                data-action="view-event"
                data-event-id="{{id}}"
                href="{{viewurl}}"
                class="timetable-event"
            >
                {{{name}}}
            </a><br/>
            {{{formattedtime}}}
        </div>
    </div>
    </li>
        {{/events}}
    </ul>

</div>
{{#pagination}}
<div>
   
    {{#prev}}
        <a href="{{{prevurl}}}">
            <span aria-hidden="true">«</span>
           {{prevtext}}
        </a>
    {{/prev}}
    {{^prev}}
    
            <span aria-hidden="true">«</span>
           {{#str}} previous, block_timetable {{/str}}
    {{/prev}}
    
    {{{sep}}}
    {{#next}}
       <a href="{{{nexturl}}}">
            
           {{nexttext}} <span aria-hidden="true">»</span>
        </a>
    {{/next}}
    {{^next}}
            {{#str}} next, block_timetable {{/str}}
           <span aria-hidden="true">»</span>
    {{/next}}
</div>
{{/pagination}}

{{#js}}
require(['jquery', 'core_calendar/calendar_view'], function($, CalendarView) {
    CalendarView.init($("#timetable-events{{uniqid}}"), 'upcoming');
});
{{/js}}



